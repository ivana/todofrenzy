<%= content_tag_for :li, list do %>
  <h2><%= list.name %></h2>

  <ol class="actions">
    <li><a class="new-item" href="#" title="New item">+</a></li>
    <li><%= link_to mac?? '✗' : 'x', list, :remote => true, :method => 'delete',
      :title => 'Delete list', :confirm => 'Are you sure you want to delete this list? There is no undo!' %></li>
    <li><%= link_to mac?? '✓' : ':)', clear_todo_list_path(list), :remote => true, :method => 'put',
      :title => 'Clear done items' %></li>
  </ol>

  <ul class="items">
    <%= render :partial => 'items/item', :collection => list.items %>
  </ul>
<% end %>
