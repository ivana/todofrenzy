<ol>
  <% for list in @lists %>

    <li id="<%= dom_id(list) %>">
      <h2><%= list.name %></h2>

      <ol class="actions">
        <li><a class="new-item" href="#" title="New item">+</a></li>
        <li><a class="del-done" href="#" title="Delete done items">✓</a></li>
        <li><%= link_to '✗', todo_list_path(:id => list.id), :class => 'del', :title => 'Delete list' %></li>
        <!--<li><a class="edit" href="#" title="Edit list">✎</a></li>-->
      </ol>

      <ul class="items">
        <% for item in list.items %>
          <li>

            <% form_tag({:controller => 'items'}, {:id => dom_id(item)} ) do %>
              <div>

                <%= check_box_tag 'done', true, item.done, :id => "#{dom_id(item)}_done" %>
                <%= label_tag "#{dom_id(item)}_done", item.description, :class => item.done ? 'done' : '' %>

                <input type="hidden" name="id" value="<%= item.id %>">
              </div>
            <% end %>
            
          </li>
        <% end %>
      </ul>
    </li>

  <% end %>
</ol>